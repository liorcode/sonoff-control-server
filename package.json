{
  "name": "sonoff-control-server",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "tsc",
    "build-watch": "tsc -w",
    "lint": "tslint --project .",
    "serve": "node ./dist/server",
    "serve-watch": "nodemon ./dist/server",
    "start": "npm run build && npm run serve",
    "watch": "concurrently -k \"npm run build && npm run serve-watch\" \"npm run build-watch\"",
    "test": "DISABLE_DEVICE_SYNC=true jest"
  },
  "dependencies": {
    "body-parser": "~1.18.2",
    "concurrently": "^3.5.1",
    "debug": "~2.6.9",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "google-auth-library": "^1.6.1",
    "lodash": "^4.17.5",
    "mongodb": "^3.0.1",
    "mongoose": "^5.0.9",
    "morgan": "~1.9.0",
    "passport": "^0.4.0",
    "uuid": "^3.2.1",
    "winston": "^2.4.0",
    "ws": "^4.0.0"
  },
  "devDependencies": {
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.11.1",
    "@types/jest": "^22.2.3",
    "@types/lodash": "^4.14.107",
    "@types/mongodb": "^3.0.15",
    "@types/mongoose": "^5.0.10",
    "@types/morgan": "^1.7.35",
    "@types/passport": "^0.4.5",
    "@types/passport-strategy": "^0.2.33",
    "@types/request": "^2.47.0",
    "@types/request-promise-native": "^1.0.14",
    "@types/supertest": "^2.0.4",
    "@types/uuid": "^3.4.3",
    "@types/winston": "^2.3.9",
    "@types/ws": "^4.0.2",
    "jest": "^23.4.1",
    "jest-extended": "^0.7.1",
    "nodemon": "^1.14.11",
    "request": "^2.86.0",
    "request-promise-native": "^1.0.5",
    "supertest": "^3.1.0",
    "ts-jest": "^22.4.6",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.8.0",
    "typescript": "^2.8.3",
    "yargs": "^11.0.0"
  }
}
